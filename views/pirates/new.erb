<h1>Add new pirate</h1>
<form action="/pirates" method="post">
  <h2>Pirate</h2>
  <h3><label for="name">Pirate name</label>
  <input type="text" name="pirate[name]" id ="name"></h3>
  <h3><label for="weight">Weight</label>
  <input type="text" name="pirate[weight]" id = "weight"></h3>
  <h3><label for="height">Height</label>
  <input type="text" name="pirate[height]" id="height"></h3>
  <h2>First Ship</h2>
  <h3><label for="ship_name_1">Ship Name</label>
  <input type="text" name="pirate[ships][][name]" id="ship_name_1">
  </h3>
  <h3><label for="ship_type_1">Ship Type</label>
  <input type="text" name="pirate[ships][][type]" id="ship_type_1"></h3>
  <h3><label for="ship_booty_1">Ship Booty</label>
  <input type="text" name="pirate[ships][][booty]" id="ship_booty_1"></h3>
  <h2>Second Ship</h2>
  <h3><label for="ship_name_2">Ship Name</label>
  <input type="text" name="pirate[ships][][name]" id="ship_name_2">
  </h3>
  <h3><label for="ship_type_2">Ship Type</label>
  <input type="text" name="pirate[ships][][type]" id="ship_type_2"></h3>
  <h3><label for="ship_booty_2">Ship Booty</label>
  <input type="text" name="pirate[ships][][booty]" id="ship_booty_2"></h3>
  <label for="Submit"></label><input type="submit" name="submit" id="Submit">
</form>
